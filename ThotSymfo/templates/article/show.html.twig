{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<header class="relative flex ">
    <img class="h-1/6 w-screen" src="/images/image/entetearticle.jpg" alt="image d'un livre ouvert">
    <img class="absolute flex mx-auto justify-center" src="/images/logo/logolignenoir.png" alt="logo de Thot">
</header>
<main>
    <h1 class="text-6xl">Article</h1>
    <section class='shadow-xl bg-white-600 '>

        <div class='shadow-xl m-6'>
            <h2>{{ article.titreArticle }}</h2>
            <article>{{ article.texteArticle|raw }}</article>
        <p>{{ article.dateArticle ? article.dateArticle|date('Y-m-d ') : '' }}</p>
        </div>

    </section> 
    <a href="{{ path('app_article_index') }}">back to list</a>
    {% if app.user %}
        <a href="{{path('app_article_edit', {'id' : article.id})}}">edit</a>
    {% endif %}
 
    {% if ('ROLE_ADMIN') %}
        {{ include('article/_delete_form.html.twig') }}
        
    {% endif %}
    
</main>
{% endblock %}
